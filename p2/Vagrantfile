Vagrant.configure(2) do |config|
  config.vm.box = "debian/bookworm64"
  
  config.vm.define "bkasS" do |master|
    master.vm.hostname = "bkasS"
    master.vm.network "private_network", ip: "192.168.56.110"
    master.vm.provider "virtualbox" do |vm|
      vm.name = "bkasS"
      vm.cpus = 3
      vm.memory = 3072
      # VirtualBox optimizations
      vm.customize ["modifyvm", :id, "--ioapic", "on"] # for multi-core usage
    end
    master.vm.provision "shell", path: "scripts/install_k3s_server.sh"
  end
end